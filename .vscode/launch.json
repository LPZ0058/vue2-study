{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [



    {
      "type": "node",
      "request": "launch",
      // 调试的名字
      "name": "observicer测试调试",
      // debug调试执行的命令
      "program": "${workspaceFolder}\\node_modules\\mocha\\bin\\_mocha",
      // 传给program执行命令的参数
      "args": [
        "./src/tests/observer.spec.ts"
      ]
    },
           //这一段是Debugger for chrome的配置
    {
      "name": "使用本机 Chrome 调试 ",
      "type": "chrome",
      "request": "launch",
      "file": "${workspaceRoot}/src/debugger/build/build.html",
      "runtimeExecutable": "C:\\Program Files (x86)\\Google\\Chrome\\Application\\chrome.exe", // 改成您的 Chrome 安装路径
      // "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      // 调试前使用webpack进行构建
      "preLaunchTask":"build:debugger:chrome",
      // "userDataDir": "${tmpdir}",
      "port": 5433
    }
  ]
}
